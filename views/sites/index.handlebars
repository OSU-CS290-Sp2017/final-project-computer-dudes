<h1>Sites</h1>

<a class='btn btn-primary' href="/sites/new">Create Site</a>

<br>
<br>

<table class='table'>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Created At</th>
      <th>Updated At</th>
    </tr>
  </thead>
  {{#sites}}
    <tr>
      <td>{{id}}</td>
      <td><a href="/sites/{{id}}">{{name}}</a></td>
      <td>{{created_at}}</td>
      <td>{{updated_at}}</td>
    </tr>
  {{/sites}}
</table>
